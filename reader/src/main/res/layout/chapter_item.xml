<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:startupUI="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.niyay.reader.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/lblChapNo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="12pt"
        android:textColor="@android:color/holo_blue_dark" />

    <com.niyay.reader.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/lblChapTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblChapNo"
        android:layout_marginLeft="10dp"
        android:textSize="14pt"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/imageView" />

    <com.niyay.reader.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/lblChapView"
        android:textSize="8pt"
        android:layout_below="@+id/lblChapTitle"
        android:layout_alignLeft="@+id/lblChapTitle"
        android:layout_alignStart="@+id/lblChapTitle"
        android:textColor="@android:color/holo_orange_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_next"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.niyay.reader.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:text="Update"
        android:textSize="8pt"
        android:id="@+id/lblChapUpdate"
        android:layout_alignBottom="@+id/lblChapView"
        android:layout_toRightOf="@+id/lblChapView"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>
